<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>signup</servlet-name>
        <servlet-class>servlets.signup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>servlets.loginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addCourseServlet</servlet-name>
        <servlet-class>servlets.addCourseServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>enrollCourseServlet</servlet-name>
        <servlet-class>servlets.enrollCourseServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logoutServlet</servlet-name>
        <servlet-class>servlets.logoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>teacherRegisteredCourseServlet</servlet-name>
        <servlet-class>servlets.teacherRegisteredCourseServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>courseRegistrationServlet</servlet-name>
        <servlet-class>servlets.courseRegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>signup</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addCourseServlet</servlet-name>
        <url-pattern>/addCourseServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>enrollCourseServlet</servlet-name>
        <url-pattern>/enrollCourseServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logoutServlet</servlet-name>
        <url-pattern>/logoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>teacherRegisteredCourseServlet</servlet-name>
        <url-pattern>/teacherRegisteredCourseServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>courseRegistrationServlet</servlet-name>
        <url-pattern>/courseRegistrationServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
